@model IEnumerable<TanvirBakery.Models.Item>

@{
                /**/

                ViewBag.Title = "Home";
}

<h2>Welcome </h2>

<p style="color:aquamarine">

TanvirBakery is a renewed online bakery.it always provides good services for Customer.



</p>





<div id="themeSlider" class="carousel slide " data-ride="carousel" style="margin-top:15px;">
    <ol class="carousel-indicators">
        <li data-target="#themeSlider" data-slide-to="0" class="active"></li>
        <li data-target="#themeSlider" data-slide-to="1"></li>
        <li data-target="#themeSlider" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active">
            <div class="imgOverlay"></div>
            <img style="height: 350px;width: 100%" src="..\picture\pic1.jpg" alt="First slide">
            <div class="carousel-caption">


            </div>
        </div>
        <div class="item">
            <div class="imgOverlay"></div>
            <img style="height: 350px;width: 100%" src="..\picture\pic4.jpg" alt="Second slide">
            <div class="carousel-caption">


            </div>
        </div>
        <div class="item">
            <div class="imgOverlay"></div>
            <img style="height: 350px;width: 100%" src="..\picture\pic3.jpg" alt="Third slide">
            <div class="carousel-caption">

            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#themeSlider" data-slide="prev">
        <span class="fa fa-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#themeSlider" data-slide="next">
        <span class="fa fa-chevron-right"></span>
    </a>
</div>




<form method="get" action="">
    <h4>Search Our product </h4>
    <input type="text" name="keyword" placeholder="search by Name" />
    <input type="submit" value="Search" />
</form>



<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h2>Our trends products </h2>
        </div>
    </div>
</div>

<div class="row product-container">

    @foreach (var item in Model)
    {
        <a href="/Items/Details/@Html.DisplayFor(modelItem => item.Id)">

            <div class="col-md-3 col-sm-3 col-xs-6" style="margin-bottom: 8px">
                <div class="thumbnail product-item " style="height: 400px">
                    <img class="img-responsive" title="Click to View Product Detail" style="cursor: pointer; height: 260px;width:100%" src="/picture/@Html.DisplayFor(modelItem => item.Image)" />

                    <div class="caption">
                        <h5>@Html.DisplayFor(modelItem => item.Name)</h5>
                        <h5>@Html.DisplayFor(modelItem => item.Brand.Name)</h5>
                        <p>@Html.DisplayFor(modelItem => item.Price) TK</p>
                        <p>@Html.DisplayFor(modelItem => item.Category.Name)</p>
                    </div>
                </div>
            </div>
        </a>

    }
</div>
